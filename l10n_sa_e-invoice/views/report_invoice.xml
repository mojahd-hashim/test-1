<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
          <xpath expr="//div[@class='page']/h2[1]" position="replace">
            <div class="row">
                <div class="col-8">
                    <h2>
                        <span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.type == 'out_refund'">Credit Note</span>
                        <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                        <span t-field="o.number"/>
                    </h2>
                </div>
                <div class="col-4">
                    <img t-if="o.l10n_sa_qr_code_str and o.l10n_sa_send_state in ('reported', 'cleared')"
                         style="display:block;margin:10% auto 0 auto;"
                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 150, 150)"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='row mt32 mb32']" position="inside">
            <div class="col-auto mw-100 mb-2" t-if="o.l10n_sa_delivery_date" name="delivery_date">
                <strong>Delivery Date:</strong>
                <p class="m-0" t-field="o.l10n_sa_delivery_date"/>
            </div>
        </xpath>
    </template>

</odoo>
